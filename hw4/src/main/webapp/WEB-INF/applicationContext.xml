<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- Enable annotation-based dependency injection -->
    <context:annotation-config />
    
    <!-- Enable component scanning for @Controller annotations (Part 6) -->
    <context:component-scan base-package="com.spring.controller" />
    
    <!-- Enable Spring MVC annotations -->
    <mvc:annotation-driven />
    
    <!-- Allow static resources (like index.html) to bypass DispatcherServlet -->
    <mvc:resources mapping="/*.html" location="/" />
    <mvc:resources mapping="/css/**" location="/css/" />
    <mvc:resources mapping="/js/**" location="/js/" />
    <mvc:resources mapping="/images/**" location="/images/" />
    
    <!-- ========== PART 7, 8, 9 BEANS ========== -->
    
    <!-- Part 7 & 8: MessageUtility bean with SINGLETON scope -->
    <bean id="messageUtility" 
          class="com.spring.util.MessageUtility" 
          scope="singleton" />
    
    <!-- Part 9: MessageUtility bean with REQUEST scope -->
    <bean id="messageUtilityRequest" 
          class="com.spring.util.MessageUtility" 
          scope="request">
        <aop:scoped-proxy />
    </bean>
    
    <!-- Part 7: Controller with XML setter injection -->
    <bean name="/message" 
          class="com.spring.controller.MessageController">
        <property name="messageUtility" ref="messageUtility" />
    </bean>
    
    <!-- Part 8: Controller with @Autowired (singleton) -->
    <bean name="/messageAutowired" 
          class="com.spring.controller.MessageControllerAutowired" />
    
    <!-- Part 9: Controller with @Autowired (request scope) -->
    <bean name="/messageRequest" 
          class="com.spring.controller.MessageControllerRequest" />
    
    <!-- ========== PART 4: MOVIE CONTROLLERS ========== -->
    
    <!-- Part 4: Movie Controllers -->
    <bean id="movieHomeController" class="com.spring.controller.MovieHomeController" />
    <bean id="browseController" class="com.spring.controller.BrowseController" />
    <bean id="addMovieFormController" class="com.spring.controller.AddMovieFormController" />
    <bean id="addMovieController" class="com.spring.controller.AddMovieController" />
    <bean id="searchController" class="com.spring.controller.SearchController" />
    <bean id="searchMovieController" class="com.spring.controller.SearchMovieController" />
    <bean id="editMovieController" class="com.spring.controller.EditMovieController" />
    <bean id="updateMovieController" class="com.spring.controller.UpdateMovieController" />
    <bean id="deleteMovieController" class="com.spring.controller.DeleteMovieController" />
    
    <!-- ========== PART 5: BOOK CONTROLLERS ========== -->
    
    <!-- Part 5: Book Controllers using BeanNameUrlHandlerMapping -->
    <bean name="/askQuantity" class="com.spring.controller.AskQuantityController" />
    <bean name="/generateBookForm" class="com.spring.controller.GenerateBookFormController" />
    <bean name="/addBooks" class="com.spring.controller.AddBooksController" />
    
    <!-- ========== HANDLER MAPPINGS ========== -->
    
    <!-- Part 7-9: BeanNameUrlHandlerMapping (for /message URLs) -->
    <bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping">
        <property name="order" value="1" />
    </bean>
    
    <!-- Part 4: SimpleUrlHandlerMapping (for movie controllers) -->
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="order" value="2" />
        <property name="mappings">
            <props>
                <prop key="/movieHome">movieHomeController</prop>
                <prop key="/browse">browseController</prop>
                <prop key="/addMovieForm">addMovieFormController</prop>
                <prop key="/addMovie">addMovieController</prop>
                <prop key="/search">searchController</prop>
                <prop key="/searchMovie">searchMovieController</prop>
                <prop key="/editMovie">editMovieController</prop>
                <prop key="/updateMovie">updateMovieController</prop>
                <prop key="/deleteMovie">deleteMovieController</prop>
            </props>
        </property>
    </bean>
    
    <!-- View Resolver -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>

</beans>